{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "#1 tsc",
			"type": "shell",
			"command": "./node_modules/.bin/tsc",
			"args": ["--watch", "--project", "."],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "#2 webpack",
			"type": "npm",
			"script": "dev",
			"problemMatcher": [],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "ts-loader (like tsc+webpack, but slower)",
			"type": "npm",
			"script": "dev-ts-loader",
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts", // exactly match entries expected from typescript-language-features, thus preventing duplicate entries
				"severity": "error",
				"fileLocation": "absolute",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "webpack: Compiled ",
					"endsPattern": "Version: typescript "
			  	},
				"pattern": [
					{
						"regexp": "ERROR in (.+?)\\((\\d+),(\\d+)\\):",	
						"file" : 1,
						"line": 2,
						"column": 3
					},
					{
						"regexp": "TS(\\d+): (.*)",	
						"code": 1,
						"message": 2
					}
				],
			},
			"isBackground": true,
			"group": "build",
		},
	]
}